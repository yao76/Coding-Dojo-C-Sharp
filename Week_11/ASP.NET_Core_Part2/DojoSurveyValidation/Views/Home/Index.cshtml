@{
    ViewData["Title"] = "Home Page";
}
@model DojoSurveyValidation.Models.Survey
<form class="mt-5" asp-action="ProccessSurvey" asp-controller="Home" method="POST">
    <div class="form-group row">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name" class="col-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="Name" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <span asp-validation-for="Location"></span>
        <label asp-for="Location" class="col-2 col-form-label"></label>
        <div class="col-6">
            <select asp-for="Location" class="form-control">
                <option>Seattle</option>
                <option>San Jose</option>
                <option>New York</option>

            </select>
        </div>
    </div>
    <div class="form-group row mt-3">
        <span asp-validation-for="Language"></span>
        <label asp-for="Language" class="col-2 col-form-label"></label>
        <div class="col-6">
            <select class="form-control" asp-for="Language">
                <option>Python</option>
                <option>Javascript</option>
                <option>C#</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <span asp-validation-for="Comment"></span>
        <label asp-for="Comment" class="col-2 col-form-label"></label>
        <div class="col-6">
            <textarea asp-for="Comment" class="form-control mt-3"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-7 mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>


