<div class="card col-6 offset-3 mt-3">
    <div class="card-body">
        <h4 class="card-title">Submitted Information</h4>
        <hr>
        <div class="row offset-1">   
            <div class="col-6">
                <p class="card-text">Name:</p>
                <hr>
                <p class="card-text">Dojo Location:</p>
                <hr>
                <p class="card-text">Favorite Language:</p>
                <hr>
                <p class="card-text">Comment:</p>
                <hr>
            </div>
            <div class="col-6">
                <p class="card-text"> @Model.Name </p>
                <hr>
                <p class="card-text"> @Model.Location </p>
                <hr>
                <p class="card-text"> @Model.Language </p>
                <hr>
                <p class="card-text"> @Model.Comment </p>
                <hr>
            </div>
        </div>

        <a href="/" class="btn btn-primary offset-9">Go back</a>
    </div>
</div>