@model FormSubmission.Models.User
<form class="mt-5" asp-action="Register" asp-controller="Home" method="post">
    <div class="form-group row">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName" class="col-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName" class="col-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="form-group row mt-3">
        <span asp-validation-for="Age"></span>
        <label asp-for="Age" class="col-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="Age" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email" class="col-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="Email" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password" class="col-2 col-form-label"></label>
        <div class="col-6">
            <input asp-for="Password" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-7 mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
