@{
    ViewData["Title"] = "Registration Page";
}
@model User
<div>
    <div class="row">
        <div class="col-2">        
            <h1 class="text-center">Registration</h1>
        </div>
        <div class="col-6 offset-4 mt-3">
            <a href="login">Login</a>
        </div>
    </div>
</div>
<form asp-action="ProccessRegister" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span class="text-danger"asp-validation-for="FirstName"></span>
        <div class="col-8">
            <input class="form-control" asp-for="FirstName">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <span class = "text-danger" asp-validation-for="LastName"></span>
        <div class="col-sm-8">
            <input class="form-control" asp-for="LastName">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Email">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Password">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Confirm"></label>
        <span class="text-danger"asp-validation-for="Confirm"></span>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Confirm">
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary offset-4" name='create-btn' value="Register">
    </div>
</form>
