@model Transaction
<form asp-action="ProcessTransaction" asp-controller="Home" method="post">
    <div class="form-group row">
        <label asp-for="Amount" class="col-2 col-form-label"></label>
        <div class="col-2">
            <input class="form-control" type="number" asp-for="Amount">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>