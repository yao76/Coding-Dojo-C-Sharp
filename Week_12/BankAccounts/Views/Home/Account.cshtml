@model Transaction
<div class="header">
    <div class="row">
        <div class="col">
            <h1>Welcome! @ViewBag.Name</h1>
        </div>
        <div class="col">
            <h3>Current Balance: @ViewBag.Balance.ToString("n2") </h3>
        </div>
        <div class="col-2">
            <a href="/logout">Logout</a>
        </div>
    </div>
</div>

<form asp-action="ProcessTransaction" asp-controller="Home" method="post">
    <div class="form-group row">
        <label asp-for="Amount" class="col-2 col-form-label"></label>
        <div class="col-2">
            <input class="form-control" type="number" asp-for="Amount">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var trans in @ViewBag.AllTransactions)
        {
            <tr>
                <td>
                    @trans.Amount.ToString("N2")
                </td>
                <td>
                    @trans.CreatedAt.ToString("MMMM dd yyyy")
                </td>
            </tr>
        }
    </tbody>
</table>