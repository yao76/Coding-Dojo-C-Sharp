@model ChefsNDishes.Models.Dish
<div class="jumbotron">
    <h1>Add a new Dish!</h1>
</div>
<a href="/dishes">Back to Dishes</a>
<div class="main">
    <form asp-action="AddDish" asp-controller="Dish" method="post">
        <div class="form-group">
            <label asp-for="Name">Name of Dish</label>
            <span class="text-danger"asp-validation-for="Name"></span>
            <div class="col-5">
                <input class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Calories"># of Calories</label>
            <span class="text-danger"asp-validation-for="Calories"></span>
            <div class="col-5">
                <input class="form-control" asp-for="Calories">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span class="text-danger"asp-validation-for="Tastiness"></span>
            <div class="col-5">
                <select class="form-control" asp-for="Tastiness">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span class="text-danger"asp-validation-for="Description"></span>
            <div class="col-5">
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="">Chef's Name</label>
            <span class="text-danger" asp-validation-for="ChefId"></span>
            <div class="col-5">
                <select asp-for="ChefId">
                    <option value="" disabled selected>Choose a chef</option>
                    @{
                        foreach(var chef in @ViewBag.AllChefs)
                        {
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                    }
                </select>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Add a Dish</button>
    </form>
</div>