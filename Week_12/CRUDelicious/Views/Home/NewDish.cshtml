@model CRUDelicious.Models.dishes
<div class="jumbotron">
    <h1>Add a new Dish!</h1>
</div>
<a href="/">Home</a>
<div class="main">
    <form asp-action="AddDish" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Chef">Chef's Name</label>
            <span class="text-danger"asp-validation-for="Chef"></span>
            <div class="col-5">
                <input class="form-control" asp-for="Chef">
            </div>
            
        </div>
        <div class="form-group">
            <label asp-for="Name">Name of Dish</label>
            <span class="text-danger"asp-validation-for="Name"></span>
            <div class="col-5">
                <input class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Calories"># of Calories</label>
            <span class="text-danger"asp-validation-for="Calories"></span>
            <div class="col-5">
                <input class="form-control" asp-for="Calories">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span class="text-danger"asp-validation-for="Tastiness"></span>
            <div class="col-5">
                <select class="form-control" asp-for="Tastiness">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span class="text-danger"asp-validation-for="Description"></span>
            <div class="col-5">
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Add a Dish</button>
    </form>
</div>