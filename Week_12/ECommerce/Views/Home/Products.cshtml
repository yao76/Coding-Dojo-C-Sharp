@model ProductViewModel
<head>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light" >
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav justify-content-between">
            <a class="nav-item nav-link" href="/">Dashboard</a>
            <a class="nav-item nav-link active" href="/products">Products <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/orders">Orders</span> </a>
            <a class="nav-item nav-link" href="/customers">Customers</a>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col-2">
        <h6><u>Add a new product</u></h6>
        <form asp-action="AddProduct" asp-conntroller="Home" method="post">
            <div class="formgroup">
                <label class="col-form-label" asp-for="@Model.NewProduct.Name"></label>
                <input class="form-control" asp-for="@Model.NewProduct.Name">
                <span asp-validation-for="@Model.NewProduct.Name"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="@Model.NewProduct.Url"></label>
                <input class="form-control"asp-for="@Model.NewProduct.Url">
                <span asp-validation-for="@Model.NewProduct.Url"></span>
            </div>
            <div class="formgroup">
                <label class="col-form-label" asp-for="@Model.NewProduct.Description"></label>
                <textarea class="form-control" asp-for="@Model.NewProduct.Description" rows="4"></textarea>
                <span asp-validation-for="@Model.NewProduct.Description"></span>
            </div>

            <div class="formgroup">
                <label class="col-form-label" asp-for="@Model.NewProduct.Quantity"></label>
                <input type="number" class="form-control" asp-for="@Model.NewProduct.Quantity">
                <span asp-validation-for="@Model.NewProduct.Quantity"></span>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Create</button>
        </form>
    </div>
    <div class="col-10">
        <div class="row">
            @foreach(var product in @Model.AllProducts)
            {
                <div class="card border-dark mx-2 mb-3" style="max-width:150px;">
                    <img class="card-img-top" src="@product.Url" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">@product.Name</p>
                    </div>
                    <div class="card-footer">
                        <p class="card-text">(@product.Quantity Left)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>