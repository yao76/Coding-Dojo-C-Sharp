@model LoginUser
<div>
    <div class="row">
        <div class="col-2">        
            <h1 class="text-center">Login</h1>
        </div>
        <div class="col-6 offset-4 mt-3">
            <a href="/">Register</a>
        </div>
    </div>
</div>
<form asp-action="ProcessLogin" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <span class="text-danger" asp-for-validation="Email"></span>
        <div class="col-8">
            <input asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span class="text-danger" asp-for-validation="Password"></span>
        <div class="col-8">
            <input asp-for="Password" class="form-control">
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary offset-4" value="Login">
    </div>
</form>