@model Wedding
<h1>Plan Your Wedding</h1>
<form asp-action="NewWedding" asp-controller = "Home" method="post">
    <div class="form-group row">
        <label class="col-2"asp-for="WedderOne"></label>
        <div class="col-5">
            <input type="text" asp-for="WedderOne" class="form-control">
        </div>
        <span asp-validation-for="WedderOne" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label class="col-2"asp-for="WedderTwo"></label>
        <div class="col-5">
            <input type="text" asp-for="WedderTwo" class="form-control">
        </div>
        <span asp-validation-for="WedderTwo" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label class="col-2" asp-for="WeddingDate"></label>
        <div class="col-5">
            <input type="date" asp-for="WeddingDate" class="form-control">
        </div>
        <span asp-validation-for="WeddingDate" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label class="col-2" asp-for="Address"></label>
        <div class="col-5">
            <input type="text" asp-for="Address" class="form-control">
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
        
    </div>

    <input type="hidden" asp-for="UserId" value="@ViewBag.UserId">

    <button class="btn btn-primary offset-2"type="submit">Create</button>
</form>