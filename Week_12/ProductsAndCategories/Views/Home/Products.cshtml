@{
    ViewData["Title"] = "Home Page";
}
@model Product
<!-- <div class="text-center">
    <h1 class="display-4">Products | <a href="/categories">Categories</a></h1>   
</div> -->
<div class="row">
    <div class="col offset-2">
        <h1 class="display-4">Products |</h1>
    </div>
    <div class="col-7">
        <h1 class="display-4"><a href="/categories">Categories</a></h1>
    </div>
</div>
<div class="row">
    <div class="col newproduct">
        <div class="text-center">
            <h3>New Product</h3>
        </div>
    </div>
    <div class="col existingproducts">
        <h3>Existing Products</h3>
    </div>
</div>

<div class="row">
    <div class="col-5 offset-1 form">
        <form asp-action="NewProduct" asp-controller="Home" method="post">
            <div class="form-group row">
                <label asp-for="Name"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" type="text">
                </div>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Description"></label>
                <div class="col-4">
                    <input asp-for="Description" class="form-control" type="text">
                </div>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Price"></label>
                <div class="col-5">
                    <input asp-for="Price" type="number" class="form-control">
                </div>
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <button class="btn btn-primary offset-1" type="submit">Submit</button>
        </form>
    </div>
    
    <div class="col ">
        @foreach(var product in @ViewBag.allproducts)
        {
            <a href="/products/@product.ProductId">@product.Name</a><br>
        }
    </div>
</div>

